<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/messages_header">

        <EditTextPreference
            app:key="telegram_bot_key"
            app:title="@string/telegram_bot_key"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="telegram_chat_id"
            app:title="@string/telegram_chat_id"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="sim0_number"
            app:title="@string/sim0_number"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="sim1_number"
            app:title="@string/sim1_number"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreference
                app:key="@string/enable_capture_calls_key"
                android:defaultValue="false"
                android:title="@string/capture_calls_title"
                android:key="capture_calls"
                app:summary="Capture incoming calls and history" />

    </PreferenceCategory>

</PreferenceScreen>